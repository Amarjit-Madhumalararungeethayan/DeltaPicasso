<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".Editor">

    <TextView
        android:layout_width="304dp"
        android:layout_height="304dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="100dp"
        android:background="@color/black"
        />

    <ImageView
        android:layout_width="300dp"
        android:layout_height="300dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:src="@drawable/logo"
        android:layout_marginTop="100dp"
        android:id="@+id/pic"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@id/pic"
        android:text="Click here to Choose a Pic"
        app:layout_constraintStart_toStartOf="@id/pic"
        app:layout_constraintEnd_toEndOf="@id/pic"
        android:layout_marginBottom="30dp"
        android:fontFamily="@font/moon"
        android:id="@+id/tag"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your Picture ..."
        android:fontFamily="@font/moon"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:textSize="30sp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="25dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="What do you want to do ..."
        app:layout_constraintTop_toBottomOf="@id/pic"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="35dp"
        android:layout_marginLeft="25dp"
        android:textSize="22sp"
        android:fontFamily="@font/moon"
        android:id="@+id/que"
        />

    <TextView
        android:layout_width="250dp"
        android:layout_height="45dp"
        android:gravity="center"
        android:text="Convert to Grayscale"
        android:background="@drawable/rounded"
        app:layout_constraintTop_toBottomOf="@id/que"
        android:textColor="@color/white"
        android:fontFamily="@font/moon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="30dp"
        android:elevation="15dp"
        android:id="@+id/gray"
        />

    <TextView
        android:layout_width="250dp"
        android:layout_height="45dp"
        android:gravity="center"
        android:text="Add Text"
        android:id="@+id/text"
        android:background="@drawable/rounded"
        app:layout_constraintTop_toBottomOf="@id/gray"
        android:textColor="@color/white"
        android:fontFamily="@font/moon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="30dp"
        android:elevation="15dp"
        />

    <TextView
        android:layout_width="135dp"
        android:layout_height="45dp"
        android:gravity="center"
        android:text="Save to Gallery"
        android:id="@+id/save"
        android:background="@drawable/rounded"
        app:layout_constraintTop_toBottomOf="@id/text"
        android:textColor="@color/white"
        android:fontFamily="@font/moon"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="60dp"
        android:elevation="15dp"
        />

    <TextView
        android:layout_width="135dp"
        android:layout_height="45dp"
        android:gravity="center"
        android:text="Share"
        android:id="@+id/share"
        android:background="@drawable/rounded"
        app:layout_constraintTop_toBottomOf="@id/text"
        android:textColor="@color/white"
        android:fontFamily="@font/moon"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="40dp"
        android:layout_marginRight="60dp"
        android:elevation="15dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Amarjit"
        android:fontFamily="@font/moon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="20dp"
        android:textSize="15sp"

        />

</androidx.constraintlayout.widget.ConstraintLayout>